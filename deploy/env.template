# ============================================
# 만파식 생태계 환경변수 템플릿
# 이 파일을 복사하여 .env로 저장하고 값을 설정하세요
# cp deploy/env.template .env
# ============================================

# ============================================
# 공통 설정
# ============================================
NODE_ENV=development
# NODE_ENV=production

# JWT 시크릿 (프로덕션에서는 반드시 변경)
JWT_SECRET=your-super-secret-key-change-in-production-min-32-chars

# ============================================
# 데이터베이스 설정
# ============================================
# PostgreSQL
POSTGRES_USER=manpasik
POSTGRES_PASSWORD=manpasik123
POSTGRES_DB=manpasik_auth
DATABASE_URL=postgresql://manpasik:manpasik123@postgres:5432/manpasik_auth

# MongoDB
MONGODB_URI=mongodb://manpasik:manpasik123@mongo:27017/manpasik_measurements?authSource=admin

# Redis
REDIS_URL=redis://:manpasik123@redis:6379

# ============================================
# 서비스 포트
# ============================================
AUTH_SERVICE_PORT=8001
MEASUREMENT_SERVICE_PORT=8002
AI_SERVICE_PORT=8003
PAYMENT_SERVICE_PORT=3004
NOTIFICATION_SERVICE_PORT=3005
VIDEO_SERVICE_PORT=3006
TRANSLATION_SERVICE_PORT=3007
DATA_SERVICE_PORT=3008
ADMIN_SERVICE_PORT=3009
GATEWAY_PORT=8080

# ============================================
# 외부 서비스 API 키
# ============================================
# Stripe (결제)
STRIPE_SECRET_KEY=sk_test_your_stripe_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Firebase (알림)
FIREBASE_PROJECT_ID=your-firebase-project
FIREBASE_CONFIG={}

# Agora (화상통화)
AGORA_APP_ID=your-agora-app-id
AGORA_APP_CERTIFICATE=your-agora-certificate

# ============================================
# OAuth 설정
# ============================================
# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URL=http://localhost:8080/api/auth/callback/google

# Kakao OAuth
KAKAO_CLIENT_ID=your-kakao-client-id
KAKAO_CLIENT_SECRET=your-kakao-client-secret
KAKAO_REDIRECT_URL=http://localhost:8080/api/auth/callback/kakao

# Naver OAuth
NAVER_CLIENT_ID=your-naver-client-id
NAVER_CLIENT_SECRET=your-naver-client-secret
NAVER_REDIRECT_URL=http://localhost:8080/api/auth/callback/naver

# ============================================
# SMS/2FA 설정
# ============================================
TWILIO_ACCOUNT_SID=your-twilio-sid
TWILIO_AUTH_TOKEN=your-twilio-token
TWILIO_PHONE_NUMBER=+1234567890

# ============================================
# 모니터링 설정
# ============================================
PROMETHEUS_ENABLED=true
GRAFANA_ADMIN_PASSWORD=admin123

# ============================================
# 로깅 설정
# ============================================
LOG_LEVEL=info
# LOG_LEVEL=debug

